// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  password String

  @@map("users")
}

model Game {
  id          String   @id @default(uuid())
  name        String
  notes       String
  developer   String
  rating      String
  gamingTime  String
  releaseDate DateTime
  playDate    DateTime
  tags        Tag[]

  @@map("Games")
}

model Tag {
  Game   Game   @relation(fields: [gameId], references: [id])
  gameId String
  id     String @id @default(uuid())
  name   String

  @@map("Tags")
}
